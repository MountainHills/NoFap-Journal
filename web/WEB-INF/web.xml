<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>records</servlet-name>
        <jsp-file>/records.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SimpleCaptchaServlet</servlet-name>
        <servlet-class>controller.SimpleCaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewStreakServlet</servlet-name>
        <servlet-class>controller.NewStreakServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndStreakServlet</servlet-name>
        <servlet-class>controller.EndStreakServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>controller.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>records</servlet-name>
        <url-pattern>/records</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SimpleCaptchaServlet</servlet-name>
        <url-pattern>/SimpleCaptchaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewStreakServlet</servlet-name>
        <url-pattern>/NewStreakServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndStreakServlet</servlet-name>
        <url-pattern>/EndStreakServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/DownloadServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <error-page>
    <error-code>404</error-code>
    <location>/error/Error404.jsp</location>
    </error-page>

    <error-page>
        <exception-type>exception.IncorrectCaptchaException</exception-type>
        <location>/error/IncorrectCAPTCHA.jsp</location>
    </error-page>

    <error-page>
        <exception-type>exception.IncorrectPasswordsException</exception-type>
        <location>/error/IncorrectPasswords.jsp</location>
    </error-page>

    <error-page>
        <exception-type>exception.IncorrectCredentialsException</exception-type>
        <location>/error/IncorrectCredentials.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.NotUniqueUsernameException</exception-type>
        <location>/error/NotUniqueUsername.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.NoCompleteRecordException</exception-type>
        <location>/error/NoCompleteRecord.jsp</location>
    </error-page>
</web-app>
